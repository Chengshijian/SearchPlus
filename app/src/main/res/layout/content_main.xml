<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/back_color"
              android:orientation="vertical">

    <include
        layout="@layout/main_header">
    </include>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <RelativeLayout

                    android:id="@+id/grade_search"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_view_1"
                        android:layout_width="@dimen/image_main_size"
                        android:layout_height="@dimen/image_main_size"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="8dp"
                        android:src="@mipmap/ic_search_grade"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image_view_1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="14dp"
                        android:text="查询"
                        android:textSize="12sp"/>


                </RelativeLayout>

                <RelativeLayout

                    android:id="@+id/one_key_assess"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_view_2"
                        android:layout_width="@dimen/image_main_size"
                        android:layout_height="@dimen/image_main_size"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/ic_one_key_assess"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image_view_2"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="14dp"
                        android:text="一键评教"
                        android:textSize="12sp"/>


                </RelativeLayout>



                <RelativeLayout

                    android:id="@+id/grade_list"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_view_3"
                        android:layout_width="@dimen/image_main_size"
                        android:layout_height="@dimen/image_main_size"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="8dp"
                        android:src="@mipmap/ic_grade_list"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image_view_3"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="14dp"
                        android:text=" 成绩单"
                        android:textSize="12sp"/>


                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/ind_credit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_view_a"
                        android:layout_width="@dimen/image_main_size"
                        android:layout_height="@dimen/image_main_size"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="8dp"
                        android:src="@mipmap/ic_credit"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image_view_a"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="14dp"
                        android:text="自主学分"
                        android:textSize="12sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lecture"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_view_c"
                        android:layout_width="@dimen/image_main_size"
                        android:layout_height="@dimen/image_main_size"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="8dp"
                        android:src="@mipmap/ic_lecture"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image_view_c"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="14dp"
                        android:text="公布讲座"
                        android:textSize="12sp"/>

                </RelativeLayout>

                <RelativeLayout

                    android:id="@+id/personal_info"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_view_d"
                        android:layout_width="@dimen/image_main_size"
                        android:layout_height="@dimen/image_main_size"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="16dp"
                        android:src="@mipmap/ic_personal_info"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image_view_d"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="14dp"
                        android:text="个人信息"
                        android:textSize="12sp"/>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>