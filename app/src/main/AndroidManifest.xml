<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.android.chengshijian.searchplus">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />


    <!--允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--获取GSM（2g）、WCDMA（联通3g）等网络状态的信息  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--获取sd卡写的权限，用于文件上传和下载-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--允许读取手机状态 用于创建BmobInstallation-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="com.android.chengshijian.searchplus.app.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.android.chengshijian.searchplus.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.android.chengshijian.searchplus.activity.AddSchoolAccountActivity"/>

        <activity
            android:name="com.android.chengshijian.searchplus.activity.QueryGradeActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name="com.android.chengshijian.searchplus.activity.OneKeyAssessActivity"/>
        <activity android:name="com.android.chengshijian.searchplus.activity.QueryGradeListActivity"/>
        <activity android:name="com.android.chengshijian.searchplus.activity.QueryIndCreditActivity"/>
        <activity android:name="com.android.chengshijian.searchplus.activity.QueryLectureActivity"/>

        <activity
            android:name="com.android.chengshijian.searchplus.activity.QueryPersonalInfoActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.android.chengshijian.searchplus.activity.SettingsActivity">
        </activity>

        <activity android:name="com.android.chengshijian.searchplus.activity.HistoryActivity"/>
        <activity android:name="com.android.chengshijian.searchplus.activity.FavoriteActivity"/>
        <activity android:name="com.android.chengshijian.searchplus.activity.LoginActivity"/>
        <activity android:name="com.android.chengshijian.searchplus.activity.RegisterActivity"/>
        <activity android:name="com.android.chengshijian.searchplus.activity.AccountManageActivity"/>
        <activity
            android:name="com.android.chengshijian.searchplus.activity.AboutActivity"/>
    </application>

</manifest>